{
  "name": "mytodo",
  "private": true,
  "version": "1.0.0",
  "description": "A cute todo list app with bunny and bear icons",
  "author": "LynG",
  "main": "electron.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "dist": "npm run build && electron-builder"
  },
  "devDependencies": {
    "@electron/remote": "^2.1.3",
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "vite": "^7.1.9"
  },
  "dependencies": {
    "@mynaui/icons": "^0.3.9"
  },
  "build": {
    "appId": "com.mytodo.app",
    "productName": "Cute Todo List",
    "icon": "build-icon.ico",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "build-icon.ico",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false
    }
  }
}
